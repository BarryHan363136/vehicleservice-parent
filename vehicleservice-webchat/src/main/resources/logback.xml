<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property scope="context" name="LOCAL_LOG_FOLDER" value="/Users/hantongshan/workspace-directory/logs/vehicleservice-webchat" />
    <property scope="context" name="SUB_SYSTEM" value="webchat" />

    <if condition='isDefined("catalina.base")'>
        <then>
            <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <file>${catalina.base}/logs/webchat.log</file>
                <append>true</append>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <FileNamePattern>${catalina.base}/logs/webchat.%d{yyyy-MM-dd}-%i.log.zip</FileNamePattern>
                    <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                        <maxFileSize>100MB</maxFileSize>
                    </timeBasedFileNamingAndTriggeringPolicy>
                    <!--<maxHistory>7</maxHistory>-->
                </rollingPolicy>
                <encoder>
                    <pattern>%d{HH:mm:ss.SSS} {%t} %-5level [webchat] %logger - %msg%n</pattern>
                    <charset>UTF-8</charset>
                </encoder>
            </appender>
        </then>
    </if>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} {%t} %-5level [webchat] %logger - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="MONITORLOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/weather-statistic.csv</file>
        <append>true</append>
        <rollingPolicy name="file" class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${catalina.base}/logs/webchat-statistic.%d{yyyy-MM}-%i.zip</FileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
            <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!--<maxHistory>7</maxHistory>-->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd|HH:mm:ss}|%m%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <logger name="MONITORLOGTOCSV" additivity="false" level="INFO">
        <appender-ref ref="MONITORLOGFILE" />
    </logger>

    <appender name="aiAppender"
              class="com.microsoft.applicationinsights.logback.ApplicationInsightsAppender">
    </appender>

    <!--<root level="trace">-->
        <!--<appender-ref ref="aiAppender" />-->
    <!--</root>-->

    <root level="info">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="aiAppender" />
    </root>

    <!--<logger name="org.apache.zookeeper.ClientCnxn" level="${logback.log.level}" />-->
    <!--<logger name="java.sql.Connection" level="${logback.log.level}" />-->
    <!--<logger name="java.sql.Statement" level="${logback.log.level}" />-->
    <!--<logger name="java.sql.PreparedStatement" level="${logback.log.level}" />-->
</configuration>